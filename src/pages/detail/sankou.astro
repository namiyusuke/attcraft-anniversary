---
import Layout from "../../layouts/Layout.astro";
import Sakura from "../../components/Sakura.astro";
import forth from "@assets/img/4th.png";
import Sakaba from "./sakaba.astro";
import icon_kuu from "@assets/img/icon_kuu.png";
import icon_nami from "@assets/img/icon_nami.png";
import sankou from "@assets/img/sankou.png";
import detail_kuu from "@assets/img/detail-kuu.png";
import detail_nami from "@assets/img/detail-nami.png";
import { Image } from "astro:assets";
---

<Layout title="Astro テンプレート" transitionColors={["#D71E1E", "#FF4D4D", "#FFB3B3"]}>
  <a
    class="js-link c-button-circle c-button-prev text-slate-950"
    href="/detail/sakaba"
    data-direction="backward"
    data-src="/img/sakaba.png"
  >
    <svg width="17" height="5" viewBox="0 0 17 5" fill="none" xmlns="http://www.w3.org/2000/svg">
      <line y1="-0.5" x2="16" y2="-0.5" transform="matrix(-1 0 0 1 16.0631 4.74341)" stroke="white"></line>
      <line
        y1="-0.5"
        x2="5.07368"
        y2="-0.5"
        transform="matrix(-0.668965 0.743294 0.668965 0.743294 4.06308 0.743408)"
        stroke="white"></line>
    </svg>
  </a>
  <a
    class="js-link c-button-circle c-button-next text-slate-950"
    href="/detail/podcast"
    data-direction="forward"
    data-src="/img/podcast.png"
  >
    <svg width="17" height="5" viewBox="0 0 17 5" fill="none" xmlns="http://www.w3.org/2000/svg">
      <line y1="4.24341" x2="16" y2="4.24341" stroke="white"></line>
      <line
        y1="-0.5"
        x2="5.07368"
        y2="-0.5"
        transform="matrix(0.668965 0.743294 -0.668965 0.743294 12 0.743408)"
        stroke="white"></line>
    </svg>
  </a>
  <a class="detail-top-btn" href="/">
    top
  </a>
  <Sakura />
  <div class="js-detail-page relative">
    <div class="min-h-screen bg-[#F0F0F0]">
      <div class="detail-content md:pb-32">
        <div class="wrapper">
          <div class="relative z-10 justify-between md:flex">
            <div class="md:w-lower-content-left">
              <div class="sticky top-0 md:top-36">
                <Image
                  class="absolute bottom-[calc(100%-30px)] right-0 z-20 hidden w-[min(calc(128/1440*100vw),128px)] animate-wiggle01 md:block"
                  src={detail_kuu}
                  alt=""
                />
                <Image
                  class="absolute -left-4 top-[calc(100%-30px)] z-20 hidden w-[min(calc(67/1440*100vw),70px)] animate-wiggle02 md:block"
                  src={detail_nami}
                  alt=""
                />
                <div class="detail-canvas-wrap">
                  <img id="detail-canvas-img" src={sankou.src} alt="" class="w-full" />
                  <canvas id="detail-canvas"></canvas>
                </div>
              </div>
            </div>
            <div class="mt-16 md:mt-0  md:w-lower-content-right">
              <div class="js-detail">
                <p class="message-kuu message">
                  <span class="message-icon">
                    <Image src={icon_kuu} alt="" />
                  </span>
                  <span class="message-text">
                    まさかの！SANKO!さんに掲載いただけました！<br aria-hidden="true">
                    BRIK GALLERYさんにも！！！
                  </span>
                </p>
              </div>
              <div class="js-detail">
                <p class="message-nami message">
                  <span class="message-icon">
                    <Image src={icon_nami} alt="" />
                  </span>
                  <span class="message-text">
                    Attcraft名義で載ったの、初めてだね！
                  </span>
                </p>
              </div>
              <div class="js-detail">
                <p class="message-kuu message">
                  <span class="message-icon">
                    <Image src={icon_kuu} alt="" />
                  </span>
                  <span class="message-text">
                    嬉しすぎたねえ〜<br aria-hidden="true">
                    と同時に、身が引き締まる思いもあって、、、<br aria-hidden="true">
                    より、制作への想いも高まった気がしたね！
                  </span>
                </p>
              </div>
              <div class="js-detail">
                <p class="message-nami message">
                  <span class="message-icon">
                    <Image src={icon_nami} alt="" />
                  </span>
                  <span class="message-text">
                    これからも掲載してもらえるよう、がんばろう！
                    </span>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
