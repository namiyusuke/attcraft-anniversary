---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import sankou from "../../public/img/sankou.webp";
import attcraft_4th from "@assets/img/attcraft_4th.png";
---

<Layout title="Astro テンプレート" transitionColors={["#dddddd", "#000000", "#ffffff"]}>
  <Image src={attcraft_4th} alt="" />
</Layout>

<style>
  img {
    width: 50%;
    height: auto;
  }
  #camera-move-btn {
    position: fixed;
    top: 20px;
    left: 20px;
  }
  #camera-reset-btn {
    position: fixed;
    top: 60px;
    left: 20px;
  }
  body {
    margin: 0;
    overflow: hidden;
  }

  #webgl {
    width: 100vw;
    height: 100vh;
  }

  #webgl canvas {
    display: block;
  }
</style>
